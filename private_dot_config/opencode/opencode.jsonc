{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "keybinds": {
    "leader": "ctrl+x"
  },
  "lsp": {
    "astro": {
      "command": ["astro-ls", "--stdio"],
      "extensions": [".astro"],
      "initialization": {
        "typescript": {
          "tsdk": "./node_modules/typescript/lib"
        },
        "environment": "node"
      }
    }
  },
  "mcp": {
    "apple-mcp": {
      "command": ["bunx", "@dhravya/apple-mcp"],
      "enabled": true,
      "type": "local"
    },
    "browsermcp": {
      "command": ["bunx", "@browsermcp/mcp@latest"],
      "enabled": true,
      "type": "local"
    },
    "chrome-devtools": {
      "command": ["bunx", "chrome-devtools-mcp@latest"],
      "enabled": true,
      "type": "local"
    },
    "cloudflare": {
      "enabled": true,
      "url": "https://docs.mcp.cloudflare.com/mcp",
      "type": "remote"
    },
    "console-ninja": {
      "command": ["node", "~/.console-ninja/mcp/"],
      "enabled": false,
      "type": "local"
    },
    "context7": {
      "command": ["bunx", "@upstash/context7-mcp@latest"],
      "enabled": true,
      "type": "local"
    },
    "playwright": {
      "command": ["bunx", "@playwright/mcp@latest"],
      "enabled": false,
      "type": "local"
    },
    "sequential-thinking": {
      "command": ["bunx", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": true,
      "type": "local"
    },
    "stripe": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.stripe.com"
    },
    "svelte": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.svelte.dev/mcp"
    },
    "wallaby": {
      "command": ["node", "~/.wallaby/mcp/"],
      "enabled": false,
      "type": "local"
    }
  },
  "theme": "catppuccin"
}
