keybind = super+k=unbind

keybind = alt+delete=text:\x1b\x64
keybind = super+backspace=text:\x1b\x5b\x31\x3b\x08
keybind = super+delete=text:\x0b
keybind = super+shift+k=text:\x15

keybind = page_down=scroll_page_down
keybind = page_up=scroll_page_up
