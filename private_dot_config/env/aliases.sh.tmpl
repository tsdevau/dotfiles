# Navigational aliases
alias -g ...="../.."
alias -g ....="../../.."
alias -g .....="../../../.."
alias -g ......="../../../../.."
alias cd="z"

# File management aliases
alias cp="cp -iv"
alias md="mkdir -p"
alias mkdir="mkdir -p"
alias mv="mv -iv"
alias rd="rmdir"
alias rm="trash"
alias rmdir="trash"

alias eza="eza --icons=always --color=always --git --group-directories-first --header --hyperlink"
alias la="eza -a"
alias ll="eza -l"
alias lla="eza -la"
alias ls="eza -l"
alias lsa="eza -la"
alias lst="eza --tree --level 3"
alias lt="eza --tree"

# Application override aliases
alias bat="bat --color=always --italic-text=always --decorations=always"
alias egrep="egrep --color=always"
alias fd="fd --hidden"
alias fgrep="fgrep --color=always"
alias ghc="gh copilot "
alias ghcc="gh copilot config "
alias ghce="gh copilot explain "
alias ghcs="gh copilot suggest "
alias grep="grep --color=always"
alias ip="ip -c"
alias less="less -FX"
# alias npm="bun" # Force use of Bun as package manager
# alias npx="bunx" # Force use of Bun as package manager
alias pnpm="bun" # Force use of Bun as package manager
alias "pnpm dlx"="bunx"
alias wget="wget --hsts-file=\"${XDG_CACHE_HOME}/wget/wget-hsts\""
# alias y="yadm"
alias yarn="yarn --use-yarnrc \"${XDG_CONFIG_HOME}/yarn/config\""

# Convenience aliases for common mis-typed commands and shortcuts
alias br="bun run" # Bun run command
alias bpm="bun pm" # Bun package manager
alias byn="bun" # I always mistype 'bun' as 'byn'
alias cls="clear"
alias code.="{{- .editors.gui }} ."
alias neofetch="fastfetch"
alias zshenv="source ${HOME}/.zshenv"
alias zshrc="source ${ZDOTDIR}/.zshrc"
alias reload="exec ${SHELL} -l"
alias ccusage="bunx ccusage"

